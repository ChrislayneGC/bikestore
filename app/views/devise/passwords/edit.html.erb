<div class="row">

  <div class="col-sm-12 col-md-4">

  </div>

  <div class="col-sm-12 col-md-4 jumbotron">

    <h2 class="text-center">Criar nova senha!!</h2>

    <div class="row">

      <div class="col col-md-12">

        <h2>Criar nova senha</h2>

        <%= simple_form_for(resource, as: resource_name, url: update_password_customer_credentials_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, label: "Nova senha", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirmar nova senha.", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Mudar de senha" %>
        </div>
      <% end %>

      </div>

    </div>

  </div>

  <div class="col-sm-12 col-md-3">

  </div>


</div>


